{
    "name": "url-shortener",
    "version": "1.0.0",
    "description": "B1Shortener SaaS platform",
    "author": "The B1 Project Team",
    "workspaces": [
        "src/app"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:backend\"",
        "dev:backend": "cd src/app && npm run start:dev",
        "build": "npm run build:backend",
        "build:backend": "cd src/app && npm run build",
        "test": "npm run test:backend",
        "test:backend": "cd src/app && npm run test",
        "test:cov": "npm run test:backend:cov",
        "test:backend:cov": "cd src/app && npm run test:cov",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write ."
    },
    "dependencies": {
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.3"
    },
    "devDependencies": {
        "@types/bun": "^1.3.6",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.0.3",
        "concurrently": "^9.2.1",
        "eslint": "^9.39.2",
        "jest": "^30.2.0",
        "prettier": "^3.8.0",
        "ts-jest": "^29.4.6",
        "typescript": "^5.9.3"
    }
}
